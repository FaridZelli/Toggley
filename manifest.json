{
  "manifest_version": 3,
  "name": "Toggley",
  "short_name": "toggley",
  "version": "2.0",
  "author": "Farid Zelli",
  "homepage_url": "https://github.com/FaridZelli/Toggley",
  "description": "Light / Dark mode toggle button and theme switcher for Firefox.",
  "icons": {
    "16": "icons/browser.svg",
    "32": "icons/browser.svg"
  },
  "action": {
    "default_area": "navbar",
    "default_icon": "icons/browser.svg",
    "default_title": "Toggle browser theme"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
    "description": "Toggle browser theme"
    }
  },
  "options_ui": {
  "page": "options.html",
  "open_in_tab": false
  },
  "permissions": [
    "management",
    "menus",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "Toggley@FaridZelli",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
